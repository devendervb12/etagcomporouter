		controllerName="smax.etag.COMPROUTE.controller.ProductDetail" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Product Details">
		<content>
	       <VBox>
	         <items>
	            <Text text="{ProductID}"/>
	            <Text text="{Name}"/>
	            <Text text="{Category}"/>
